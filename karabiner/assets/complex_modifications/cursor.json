{
   "title": "Single Key Shortcuts for Several Applications",
   "rules": [
     {
      "description": "Change to arrow keys w/o Fn (Rev.1)",
      "manipulators": [
       {
         "type": "basic",
         "from": {
           "key_code": "close_bracket"
         },
         "to": [
           {
             "key_code": "right_arrow",
             "modifiers": [
               "command"
             ]
           }
         ],
         "conditions": [
           {
             "type": "frontmost_application_if",
             "bundle_identifiers": [
              "^org\\.videolan\\.vlc$"
             ]
           }
         ]
       },
       {
         "type": "basic",
         "from": {
           "key_code": "p"
         },
         "to": [
           {
             "key_code": "left_arrow",
             "modifiers": [
               "command"
             ]
           }
         ],
         "conditions": [
           {
             "type": "frontmost_application_if",
             "bundle_identifiers": [
              "^org\\.videolan\\.vlc$"
             ]
           }
         ]
       },
       {
         "type": "basic",
         "from": {
           "key_code": "open_bracket"
         },
         "to": [
           {
             "key_code": "up_arrow"
           }
         ],
         "conditions": [
           {
             "type": "frontmost_application_if",
             "bundle_identifiers": [
              "^com\\.amazon\\.Kindle",
              "^org\\.videolan\\.vlc$"
             ]
           }
         ]
       },
       {
         "type": "basic",
         "from": {
           "key_code": "slash"
         },
         "to": [
           {
             "key_code": "down_arrow"
           }
         ],
         "conditions": [
           {
             "type": "frontmost_application_if",
             "bundle_identifiers": [
              "^com\\.amazon\\.Kindle",
              "^org\\.videolan\\.vlc$"
             ]
           }
         ]
       },
       {
          "type": "basic",
          "from": {
            "key_code": "semicolon"
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
                "^com\\.amazon\\.Kindle",
                "^org\\.videolan\\.vlc$"
              ]
            }
          ]
        },
        {
          "type": "basic",
          "from": {
            "key_code": "quote"
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_if",
              "bundle_identifiers": [
              "^com\\.amazon\\.Kindle",
                "^org\\.videolan\\.vlc$"
              ]
            }
          ]
        }
      ]
    }
   ]
 }