{
  "title": "Disable Mouse Buttons for Keyball",
  "rules": [
    {
      "description": "Disable mouse buttons while inputting Kanji (Rev.1)",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "any": "pointing_button",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "vk_none"
            }
          ],
          "conditions": [
            {
              "type": "input_source_if",
              "input_sources": [
                {
                  "language": "^ja$"
                }
              ]
            }
          ]
        }
      ]
    }
  ]
}
